<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv='X-UA-Compatible' content='IE=edge'>
	<meta name='viewport' content='width=device-width, initial-scale=1'>
	
	<link rel="icon" href="~/img/jaguar-icon.png" asp-append-version="true"/>
	<title>JAGUAR REPORT - @Html.Raw(ViewData["Title"])</title>
	
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
	<link rel="stylesheet" href="~/css/test-requirement-table-template.css" asp-append-version="true">
	<link rel="stylesheet" href="~/css/test-requirement-code-template.css" asp-append-version="true">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@1,400;1,500&display=swap">
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
	<div id="wrapper">
        <header>
            <nav>
                <ul class="breadcrumbs">
                    @if(ViewData["Breadcrumbs"] == null){
                        <li>@ViewData["Title"]</li>
                    }else{
                        int qtdBreadcrumbs = 1;
                        <li>
                        @foreach (KeyValuePair<string,string> item in (List<KeyValuePair<string,string>>)@ViewData["Breadcrumbs"])
                        {
                            if(qtdBreadcrumbs < ((List<KeyValuePair<string,string>>)@ViewData["Breadcrumbs"]).Count){
                                <a href="~/@item.Key">@item.Value</a> 
                                <span>></span>
                            }else
                            {
                                @item.Value
                            }
                            qtdBreadcrumbs++;
                        }
                        </li>
                        
                    }
                </ul>
            </nav>

            <div class="icon-title">
                <img alt="jaguar icon" class="icon" src="~/img/jaguar-icon.png" asp-append-version="true">
                <h1 class="title">Jaguar Report</h1>
            </div>

        </header>
        <main>
            @RenderBody()
        </main>

        <footer>
            <p class="credits">Report generated by Jaguar</p>
            <div class="credits-icon">Icons made by <a target="_blank" href="https://www.flaticon.com/authors/icongeek26" title="Icongeek26">Icongeek26</a> from <a target="_blank" href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
